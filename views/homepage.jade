extends layout

block content
  div.container
    div.field
      img(src="http://findicons.com/files/icons/924/sportset/128/american_football_128x128.png").footballIMG
      div.defensiveRead
      span.defensiveSpan
      div.playClockDiv
        span#playClock

    div.placeholderButtons
      div#snap.placeHolderSnap
        input(type="submit" value="Hut Hut Hike!").buttonSnap
        img(src="http://cdn1.sbnation.com/imported_assets/475727/kfield1.gif").birdsEyeImg
      div.placeholderWRbuttons
        div.wr1
          input(type="submit" value="Wide Receiver 1")
          label Left
        div.wr2
          input(type="submit" value="Wide Receiver 2")
          label Mid
        div.wr3
          input(type="submit" value="Wide Receiver 3")
          label Right
    div.pregame
      h1 Welcome to BrowserQB!
      p You have 3 drives to score 14 points. 
      br
      br
      br
      div.center
        form(action="/", method='GET' id="mainInitials")
          label Enter your initials to start playing!
        input(type="text" name="user_initials" id="initials")
        p
          input(type="submit" value="Take to the field!" id="initialsButton").startGameBtn
    div.placeHolderTopLeft
      h1 Pass Plays
      input(type="image" src="http://ih1.redbubble.net/image.61056662.5747/fc,800x800,white.u1.jpg" name="plays").passImage#playImages
    div.placeholderTable
      table
        thead
          tr
            td Down
            td
            td
            td.down
          tr
            td Drive
            td
            td
            td.drive 1st of 3
          tr 
            td Score
            td
            td
            td.score
          tr
            td
            td
            td
            td.record

    div.placeHolderTopRight
      h1 Run Plays
      input(type="image" src="http://glb.warriorgeneral.com/images/plays/171.gif" name="plays").runImage#playImages
