extends layout

block content
  div.container
    div.scoreBoard
      div
        p.drive
      div
        p.down
      div
        p.score
    div.field
      img(src="http://findicons.com/files/icons/924/sportset/128/american_football_128x128.png").footballIMG
      div.defensiveRead
      span.defensiveSpan
      div.playClockDiv
        span#playClock
    div.placeholderButtons
      div.bottomButtonContainer
        div.progressionChoice
          p Progression
          label 1
            select(id="progression1")
              option(value='p1WR1') WR1
              option(value='p1WR2') WR2
              option(value='p1WR3') WR3
              option(value='p1WR4') WR4
          div
            label 2
              select(id="progression2")
                option(value='p2WR1') WR1 
                option(value='p2WR2') WR2 
                option(value='p2WR3') WR3
                option(value='p2WR4') WR4
          div
            label 3
              select(id="progression3")
                option(value='p3WR1') WR1 
                option(value='p3WR2') WR2
                option(value='p3WR3') WR3 
                option(value='p3WR4') WR4
          div
            label 4
              select(id="progression4")
                option(value='p4WR1') WR1  
                option(value='p4WR2') WR2  
                option(value='p4WR3') WR3  
                option(value='p4WR4') WR4
          div
            label 5
            select(id="progression5")
              option(value='p5WR1') WR1 
              option(value='p5WR2') WR2
              option(value='p5WR3') WR3
              option(value='p5WR4') WR4
        div.hikeButtonContainer
          div.huthutHIKEbttn
            input(type="button" value="Hut Hut Hike!").buttonSnap.button.button-3d
            div.preSnapReadContainer
              img(src=).birdsEyeImg
              div.placeholderWRbuttons
                div.wr1
                  input(type="button" value="Wide Receiver 1")
                  label Route
                div.wr2
                  input(type="button" value="Wide Receiver 2")
                  label Route
                div.wr3
                  input(type="button" value="Wide Receiver 3")
                  label Route
                div.wr4
                  input(type="button" value="Wide Receiver 4")
                  label Route
    div.pregame
      h1 Welcome to BrowserQB!
      p You have 3 drives to score 14 points. 
      br
      br
      br
      div.center
        form(action="/", method='post' id="mainInitials")
          label Enter your name to start playing!
        input(type="text" name="user_initials" id="initials")
        p
          input(type="submit" value="Take to the field!" id="initialsButton").startGameBtn
        p
          input(type="button" value="How To Play").howToPlayButton
    div.howToContainer
      div.mask
    div.hider      
      div.howToPlayDiv
        div.pages
          p.howToPlayPage.current
          h1 How To Play!
          p Select your play by clicking on one of the play images
          p Then you'll be put under-center and are ready to make your pre-snap read!
          input(type='button' value='What to do when under center').nextPage
          br
          input(type='button' value='Back To The Field!').closeHowToButton
          br
          p *Right now only pass plays are available. Run plays are in development!*
        div.pages
          div.howToPlayPage
          h1 Under Center
          p Use the bird's eye-view to determine what the Defense might do 
          p For example if a linebacker is on the line he might be blitzing.
          p If the cornerbacks are playing close to your wide-recievers it may take them longer to get open
          input(type='button' value= 'Getting To Know Your Wide-Recievers').nextPage
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Getting To Know Your Wideouts
          p After hiking the ball three buttons will appear beneath the field
          p Each button corresponds to one of your Wide-Recievers
          p WR1 represents the wide-reciever on the left side of the field
          p WR2 represents the wide-reciever in the middle of the field
          p WR3 represents the wide-reciever on the right side of the field
          h2 Each wide-reciever has their own style of play!
          p WR3 is your speedster so look for him to break away from his man!
          p *WR1 and WR2's play styles are in development*
          p *For now you'll have to rely soley on your reads!*
          input(type='button' value='How To Know Which WR To Throw To').nextPage
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Who To Throw To
          p After hiking the ball you'll see text flash on the field.
          p Each sentence represents a Quarterback's post-snap read
          p Each read changes the odds of the WRs making a play
          p
          input(type='button' value='What Read Does What?').nextPage
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Reads Impacting WR1
          br
          h2 Positive Reads
          p "The Safety Is Cheating Right!"
          | "The LOLB is blitzing!"
          p "Left Cornerback Blitz!"
          h2 Negative Reads
          p "WR1 Pressed!"
          | "The LOLB dropped into coverage!"
          p "The Safety is cheating left!"
          p
          input(type='button' value='Reads Impacting WR2').nextPage
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Reads Impacting WR2
          br
          h2 Positive Reads
          p "The MLB is blitzking!"
          | " Safety Blitz!"
          p "The Safety is on the line!"
          h2 Negative Reads
          p "WR2 Pressed!"
          | "The MLB dropped back into coverage!"
          p "The Safety is staying mid-field!"
          p
          input(type='button' value='Reads Impacting WR3').nextPage
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Reads impacting WR3
          br
          h2 Positive Reads
          p "The Safety is cheating left!"
          | "Right Cornerback Blitz"
          p "The ROLB is blitzing!"
          | "WR3 beat his man!"
          h2 Negative Reads
          p "WR3 Pressed!"
          | "The ROLB dropped back into coverage!"
          p "The Safety is cheating right!"
          p
          input(type='button' value='Reads Impacting All WRs').nextPage
          p
            input(type='button' value= 'Back').lastPage
          input(type='button' value='Back To The Field!').closeHowToButton
        div.pages
          div.howToPlayPage
          h1 Reads Impacting Everyone
          br
          h2 Positive Reads
          p "All Out Blitz!"
          | "The line is holding strong"
          h2 Negative Reads
          p "WRs stuffed at the line!"
          | "The Defensive End is barreling towards you!"
          p
           iframe(width='420', height='315', src='https://www.youtube.com/embed/DttfyOeU3vw', frameborder='0', allowfullscreen='') Dammit Donald!
          p
          input(type='button' value= 'Back').lastPage
          p
          input(type='button' value='Back To The Field!').closeHowToButton
    div.topLeft
      h1 Pass Plays
      div.passPlays
        div.smash
          span Smash
          img(src='../images/smash.png' name='smash').passImage#playImages.smashImg
        div.fourverticals
          span Four Verticals
          img(src="../images/fourverticals.png" name="fourverticals").passImage#playImages.fourVerticals
        div.bobsyouruncle
          span Bob's Your Uncle
          img(src='../images/bobsyouruncle.png' name='bobsyouruncle').passImage#playImages.BobsYourUncle
     